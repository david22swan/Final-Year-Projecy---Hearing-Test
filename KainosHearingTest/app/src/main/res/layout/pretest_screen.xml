<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1">
    <!-- Upper Layout, contains Volume Set check box and label -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chk_volume"
            android:id="@+id/chkVolume"
            android:layout_gravity="center_horizontal"
            android:checked="false" />

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lbl_setvolume"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:autoText="false" />
    </LinearLayout>

    <!-- Middle Layout, contains Headphones On check box and label -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10" >

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chk_headphones"
            android:id="@+id/chkHeadphones"
            android:layout_gravity="center_horizontal"
            android:checked="false" />

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lbl_headphones"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:autoText="false" />
    </LinearLayout>

    <!-- Lower Layout, contains Test Volume, Begin Test and Cancel Buttons -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10">

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_testvolume"
            android:id="@+id/btnTestVolume"
            android:layout_gravity="center_horizontal" />

        <Space
            android:layout_width="1dp"
            android:layout_height="15dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_test"
            android:id="@+id/btnStartTest"
            android:layout_gravity="center_horizontal" />

        <Space
            android:layout_width="1dp"
            android:layout_height="15dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancel"
            android:id="@+id/btnCancel"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>